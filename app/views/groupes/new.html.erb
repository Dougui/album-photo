<h1>New groupe</h1>

<% form_for(@groupe) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titre %><br />
    <%= f.text_field :titre %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :public %><br />
    <%= f.text_field :public %>
  </p>
  <p>
    <%= f.label :avatar %><br />
    <%= f.text_field :avatar %>
  </p>
  <p>
    <%= f.label :compte_id %><br />
    <%= f.text_field :compte_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', groupes_path %>
