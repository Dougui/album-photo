<% 
if params[:numPage] == nil
	numPage = 1
else
	numPage = params[:numPage].to_i
end
nbPages = (New.find(:all).length / 5.00).ceil
for i in 1..nbPages
	if i == numPage %>
		<%= i %>
<%	else %>
		<%= (link_to i, url_for(:action => :index, :numPage => i)) %>
